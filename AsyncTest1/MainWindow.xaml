<Window x:Class="AsyncTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncTest1"
        mc:Ignorable="d"
        Title="Async Test" Height="350" Width="525">
    <DockPanel Background="#004459">
        <Button Name="buttonAsync" Height="50" Content="Async Example" DockPanel.Dock="Top" Click="buttonAsync_Click" Opacity="0.8" ></Button>
        <TextBox Name="textBoxResults" DockPanel.Dock="Bottom" Margin="0,8,0,0" TextWrapping="Wrap" AcceptsReturn="True" Opacity="0.8"/>
    </DockPanel>
</Window>
